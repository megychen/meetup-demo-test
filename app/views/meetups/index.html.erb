<div class="col-md-12">
  <div class="group">
    <%= link_to("Create Meetup", new_meetup_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>No</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @meetups.each do |meetup| %>
        <tr>
          <td><%= meetup.id %></td>
          <td><%= link_to(meetup.title, meetup_path(meetup)) %></td>
          <td><%= meetup.description %></td>
          <td>
            <%= link_to("Edit", edit_meetup_path(meetup), class: "btn btn-default ben-sm") %>
            <%= link_to("Delete", meetup_path(meetup), class: "btn btn-default ben-sm",
                        method: :delete, data: { confirm: "Are you sure?" }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
