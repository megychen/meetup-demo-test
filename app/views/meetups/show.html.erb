<div class="col-md-12">
  <div class="pull-right">
    <%= link_to("Add Comment", new_meetup_comment_path(@meetup), class: "btn btn-primary") %>
  </div>
  <div>
    <b>Meetup Title: </b> <%= @meetup.title %>
  </div>
  <br>
  <div>
    <b>Meetup Description: </b><%= @meetup.description%>
  </div>
  <h4 style="margin-top: 30px;">All Comments:</h4>
  <% if @comments.blank? %>
    <p>No comments yet</p>
  <% else %>
    <table class="table">
      <!-- <thead>
        <td></td>
        <td>Comment</td>
        <td>User</td>
      </thead> -->
      <tbody>
        <% floor = 0 %>
        <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= floor += 1 %>
            </td>
            <td><%= comment.body %></td>
            <td><%= comment.user.email %></td>
            <td><%= comment.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
